@model backend.ViewModels.CriancaDashboardViewModel

@{
    ViewData["Title"] = "Meu Mundo - SaberAventura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* ======== GERAL ======== */
    body {
        font-family: "Poppins", sans-serif;
        color: var(--cor-texto);
        background: var(--cor-fundo);
        background-attachment: fixed;
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    footer {
        margin-top: 40px;
         color: #777;
        text-align: center;
        font-size: 0.9rem;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
    }

</style>


@functions {
    int CalcularIdade(DateTime dataNascimento)
    {
        var hoje = DateTime.Today;
        var idade = hoje.Year - dataNascimento.Year;
        if (dataNascimento.Date > hoje.AddYears(-idade)) idade--;
        return idade;
    }
}

<div class="container mt-4 dashboard-crianca">
    <div class="row">
        <div class="col-lg-4">
            <div class="card card-perfil-lateral shadow-sm mb-4">
                <div class="card-body d-flex align-items-center">
                    <div class="avatar-perfil">
                        @(!string.IsNullOrEmpty(Model.Crianca.Nome) ? Model.Crianca.Nome.Substring(0, 1) : "?")
                    </div>
                    <div class="ms-3">
                        <h5 class="mb-0">@Model.Crianca.Nome</h5>
                        <small class="text-muted">Idade: @CalcularIdade(Model.Crianca.DataNascimento) anos</small>
                    </div>
                </div>
            </div>

            <div class="bloco-secao">
                <h4 class="titulo-secao">‚≠ê Minhas Conquistas</h4>
                <div class="row row-cols-2 row-cols-sm-2 row-cols-lg-3 g-3">
                    @if (Model.Conquistas != null && Model.Conquistas.Any())
                    {
                        @foreach (var conquista in Model.Conquistas)
                        {
                            <div class="col d-flex">
                                <div class="card card-conquista-clean text-center h-100 w-100">
                                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                        <div class="icone-conquista">üèÜ</div>
                                        <span class="nome-conquista">@conquista</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <p class="text-muted">Nenhuma conquista ainda. Continue jogando!</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="bloco-secao">
                <h4 class="titulo-secao">üöÄ Atividades Dispon√≠veis</h4>
                
                @if (Model.Atividades == null || !Model.Atividades.Any())
                {
                    <p class="text-muted">Nenhuma atividade dispon√≠vel no momento.</p>
                }
                else
                {
                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                        @foreach (var atividade in Model.Atividades)
                        {
                            var categoriaClass = atividade.Categoria.ToLower();
                            <div class="col">
                                <div class="card card-atividade-grid text-center h-100 shadow-sm @categoriaClass">
                                    <div class="card-body d-flex flex-column">
                                        <div class="icone-materia mb-3">
                                            @switch (categoriaClass)
                                            {
                                                case "matem√°tica": <i class="bi bi-calculator-fill"></i>; break;
                                                case "portugu√™s": <i class="bi bi-book-half"></i>; break;
                                                case "ci√™ncias": <i class="bi bi-lightbulb-fill"></i>; break;
                                                case "artes": <i class="bi bi-palette-fill"></i>; break;
                                                case "hist√≥ria": <i class="bi bi-bank"></i>; break;
                                                case "geografia": <i class="bi bi-map-fill"></i>; break;
                                                case "idiomas": <i class="bi bi-translate"></i>; break;
                                                default: <i class="bi bi-star-fill"></i>; break;
                                            }
                                        </div>
                                        
                                        <div class="flex-grow-1">
                                            <h6 class="card-title d-inline mb-0 me-2">@atividade.Titulo</h6>
                                            <span class="badge categoria-tag">@atividade.Categoria</span>
                                        </div>
                                        
                                        <a href="@Url.Action("Detalhe", "AtividadeMvc", new { id = atividade.Id })" class="btn btn-iniciar mt-3">
                                            Iniciar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>