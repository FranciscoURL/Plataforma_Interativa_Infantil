@model backend.ViewModels.CriancaDashboardViewModel

@{
    ViewData["Title"] = "Meu Mundo - SaberAventura";
    Layout = "~/Views/Shared/_Layout.cshtml";
  
}
<div class="modal fade" id="confirmLogoutModal" tabindex="-1" aria-labelledby="confirmLogoutModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmLogoutModalLabel">Tem certeza que quer sair?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Voc√™ ser√° desconectado da PlataformaEdu. Confirma a sa√≠da?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ficar na Plataforma</button>
        <a href="@Url.Action("Logout", "Account")" class="btn btn-danger">Sim, Quero Sair</a>
      </div>
    </div>
  </div>
</div>

@functions {

    int CalcularIdade(DateTime dataNascimento)
    {
        var hoje = DateTime.Today;
        var idade = hoje.Year - dataNascimento.Year;
        if (dataNascimento.Date > hoje.AddYears(-idade)) idade--;
        return idade;
    }
}

<div class="container mt-4">
    <div class="row">
        <!-- Card de Perfil da Crian√ßa -->
        <div class="col-md-4">
            <div class="card p-3 text-center shadow-sm">
                
      
                <h1>Bem-vindo ao Seu Mundo de Aventuras, @Model.Crianca.Nome!</h1>
                <img src="https://placehold.co/128x128/6a11cb/ffffff?text=@(!string.IsNullOrEmpty(Model.Crianca.Nome) ? Model.Crianca.Nome.Substring(0, 1) : "?")" alt="avatar" 
                     class="mx-auto" style="width:80px;height:80px;border-radius:50%;"/>
        
                <h4 class="mt-2">@Model.Crianca.Nome</h4>
                <p class="text-muted">Idade: @CalcularIdade(Model.Crianca.DataNascimento) anos</p>
                
                <hr>

                <h6>‚≠ê Conquistas</h6>
                <ul class="list-unstyled">
                    @if (Model.Conquistas != null && Model.Conquistas.Any())
                    {
                        @foreach (var conquista in Model.Conquistas)
                        {
                            <li>üèÜ @conquista</li>
                        }
                    }
                    else
                    {
                        <li class="text-muted">Continue jogando para ganhar!</li>
                    }
                </ul>
            </div>
        </div>

    
        <div class="col-md-8">
            <div class="card p-3 shadow-sm">
                <h4>Atividades Dispon√≠veis</h4>
                <p>Escolha uma atividade para come√ßar a divers√£o!</p>

                <div class="mb-3">
                    <label for="filtroCategoria">Filtrar por categoria:</label>
                    <select class="form-select w-auto d-inline-block" id="filtroCategoria">
                        <option value="todas">Todas</option>
                        @foreach (var categoria in Model.CategoriasUnicas)
                        {
                            <option value="@categoria.ToLower()">@categoria</option>
                        }
                    </select>
                </div>

                <div id="atividades-container">
                    @foreach (var atividade in Model.Atividades)
                    {
                        <div class="card mb-2 atividade-item" data-categoria="@atividade.Categoria.ToLower()">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title mb-1">@atividade.Titulo</h5>
                                    <span class="badge bg-secondary">@atividade.Categoria</span>
                                </div>
                                <a href="@Url.Action("Detalhe", "AtividadeMvc", new { id = atividade.Id })" class="btn btn-primary">
                                    Iniciar ‚Üí
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    const filtro = document.getElementById('filtroCategoria');
    if(filtro) {
        filtro.addEventListener('change', function() {
            const categoriaSelecionada = this.value;
            const atividades = document.querySelectorAll('.atividade-item');

            atividades.forEach(item => {
                if (categoriaSelecionada === 'todas' || item.dataset.categoria === categoriaSelecionada) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    }
});
</script>
}
</div>
</script>
}
