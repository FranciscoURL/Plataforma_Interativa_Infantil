@{
    ViewData["Title"] = "Dashboard - Criança";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
  <div class="col-md-4">
    <div class="card p-3">
      <img src="https://placehold.co/128x128" alt="avatar" style="width:64px;height:64px;border-radius:50%"/>
      <h4 id="childName">Nome da Criança</h4>
      <p>Idade: 9 anos</p>
      <h6>Conquistas</h6>
      <ul id="conquistas"><li>Primeiro quiz</li></ul>
    </div>
  </div>
  <div class="col-md-8">
    <div class="card p-3">
      <h4>Dashboard</h4>
      <p>Progresso geral: <strong>72%</strong></p>
      <label>Filtrar atividades:
        <select class="form-select w-auto" id="filtroFaixa"><option value="">Todas</option><option>7-8</option><option>9-10</option><option>11-12</option></select>
      </label>
      <h5 class="mt-3">Atividades</h5>
      <div id="ativs">
        <div class="mb-2"><strong>Quebra-cabeça</strong> — Em progresso — <progress value="40" max="100"></progress></div>
 <div class="mb-2"><strong>Leitura interativa</strong> — Disponível — 
 <a href="/AtividadeMvc/Detalhe/1" class="btn btn-sm btn-primary">Iniciar</a>
</div>

      <div class="mb-2"><strong>Matemática básica</strong> — Concluído — <progress value="100" max="100"></progress> <span class="text-success">✔️</span></div>
      </div>
    </div>
  </div>
</div>
