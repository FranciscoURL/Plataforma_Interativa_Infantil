 @{
    ViewData["Title"] = "Bem-vindo!";
    ViewData["HideLogoutButton"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg card-login-register">
                <div class="card-header p-0">
                    <ul class="nav nav-tabs nav-fill" id="loginRegisterTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login-pane" type="button" role="tab" aria-controls="login-pane" aria-selected="true">Login</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register-pane" type="button" role="tab" aria-controls="register-pane" aria-selected="false">Registrar</button>
                        </li>
                    </ul>
                </div>
                <div class="card-body p-4">
                    <div class="tab-content" id="loginRegisterTabContent">

                        <div class="tab-pane fade show active" id="login-pane" role="tabpanel" aria-labelledby="login-tab" tabindex="0">
                            <h4 class="text-center mb-4">Login</h4>
                            @if (TempData["Error"] != null)
                            {
                                <div class="alert alert-danger">@TempData["Error"]</div>
                            }
                            <form method="post" action="/Account/Login">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input name="Email" type="email" class="form-control" placeholder="seu@email.com" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Senha</label>
                                    <input name="Senha" type="password" class="form-control" placeholder="••••••" required />
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">Entrar</button>
                                </div>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="register-pane" role="tabpanel" aria-labelledby="register-tab" tabindex="0">
                            <h4 class="text-center mb-4">Registrar</h4>
                             @if (TempData["ErrorRegister"] != null) {
                                <div class="alert alert-danger">@TempData["ErrorRegister"]</div>
                            }
                            @if (TempData["SuccessRegister"] != null) {
                                <div class="alert alert-success">@TempData["SuccessRegister"]</div>
                            }
                            <form method="post" action="/Account/Register">
                                <div class="mb-3">
                                    <label class="form-label">Nome Completo</label>
                                    <input name="Nome" type="text" class="form-control" placeholder="Seu Nome" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input name="Email" type="email" class="form-control" placeholder="seu@email.com" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Senha</label>
                                    <input name="Senha" type="password" class="form-control" placeholder="Crie uma senha forte" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Eu sou</label>
                                    <select name="Perfil" class="form-select">
                                        <option value="pai">Pai/Responsável</option>
                                        <option value="professor">Professor</option>
                                        <option value="crianca">Criança</option>
                                    </select>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-success">Criar Conta</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>