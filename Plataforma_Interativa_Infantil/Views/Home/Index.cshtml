@{
    ViewData["Title"] = "Bem-vindo!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --cor-fundo: #f8f9fa;
        --cor-texto: #343a40;
        --cor-texto-claro: #ffffff;
        
        --vibrante-amarelo: #FFD700;
        --vibrante-verde: #3CB371;
        --vibrante-azul: #1E90FF;
        --vibrante-laranja: #FFA500;
        --vibrante-roxo: #9370DB; 
        --vibrante-rosa: #FF69B4;
        --vibrante-vermelho-perigo: #FF6347;

        --cor-sucesso: var(--vibrante-verde);
        --cor-perigo: var(--vibrante-vermelho-perigo);
        --cor-primaria-login: var(--vibrante-roxo);

        --cor-branco: #ffffff;
        --cor-cinza-claro: #e9ecef;
        --cor-cinza-escuro: #6c757d;
    }

    /* ======== GERAL ======== */
    body {
        font-family: "Poppins", sans-serif;
        color: var(--cor-texto);
        background: var(--cor-fundo);
        background-attachment: fixed;
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    .pagina-login {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        min-height: 100vh;
        padding: 30px 15px;
    }

    /* ======== CABE√áALHO ======== */
    .cabecalho {
        text-align: center;
        margin-bottom: 30px;
        color: var(--cor-texto-claro);
        text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
    }

    .cabecalho .titulo {
        font-size: 2.8rem;
        font-weight: 700;
       color: #3b4cca;
    }


    .cabecalho .subtitulo {
        font-size: 1.2rem;
        color: #555;
        margin-top: 10px;
        font-weight: 500;
    }

     /* ======== CAIXA PRINCIPAL ======== */
    .caixa-formulario {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
        padding: 30px;
        text-align: center;
        transition: transform 0.3s;
    }

    .caixa-formulario:hover {
        transform: translateY(-3px);
    }

    /* ======== ABAS ======== */
    .abas {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .aba {
        flex: 1;
        padding: 10px 0;
        cursor: pointer;
        font-weight: 600;
        color: #555;
        background: #e6ecff;
        border: none;
        border-radius: 20px 20px 0 0;
        transition: 0.3s;
    }

    .aba:hover {
        background: #d2dcff;
    }

    .aba.ativa {
        background: #3b4cca;
        color: #fff;
    }

    /* ======== FORMUL√ÅRIOS ======== */
    .formulario {
        display: none;
        text-align: left;
        padding-top: 10px;
    }

    .formulario.ativo {
        display: block;
        animation: aparecer 0.4s ease;
    }

    h2 {
        font-weight: 700;
         color: #3b4cca;
        margin-bottom: 20px;
        text-align: center;
    }

    label {
        font-weight: 600;
        display: block;
        margin-bottom: 5px;
        color: var(--cor-texto);
    }

    input, select {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid var(--cor-cinza-escuro);
        margin-bottom: 15px;
        transition: border 0.2s;
    }

    input:focus, select:focus {
        outline: none;
        border-color: var(--vibrante-roxo);
        box-shadow: 0 0 6px rgba(147, 112, 219, 0.5);
    }

    .botao {
        width: 100%;
        border: none;
        border-radius: 25px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s ease;
        padding: 10px 0;
        font-size: 1rem;
        color: var(--cor-texto-claro);
    }

     .botao-primario {
        background: #3b4cca;
        color: white;
    }

    .botao-primario:hover {
        background: #3b4ccacc;
    }

    .botao-secundario {
        background: #3CB371;
        color: white;
    }

    .botao-secundario:hover {
        background: #3CB371cc;
    }

    footer {
        margin-top: 40px;
         color: #777;
        text-align: center;
        font-size: 0.9rem;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
    }
</style>

<div class="pagina-login">
    <header class="cabecalho">
        <h1 class="titulo">PlataformaEdu</h1>
        <p class="subtitulo">Aprender pode ser divertido! Explore atividades gamificadas e descubra o prazer do conhecimento.</p>
    </header>

    <div class="caixa-formulario">
        <div class="abas">
            <button class="aba ativa" id="btnLogin" aria-controls="formLogin">Login</button>
            <button class="aba" id="btnRegistrar" aria-controls="formRegistrar">Registrar</button>
        </div>

        <!-- Formul√°rio Login -->
        <div id="formLogin" class="formulario ativo" aria-labelledby="btnLogin">
            <h2>Login</h2>
            <form method="post" action="/Account/Login">
                <label for="email">üìß Email</label>
                <input type="email" id="email" name="Email" placeholder="seu@email.com" required>

                <label for="senha">üîí Senha</label>
                <input type="password" id="senha" name="Senha" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required>

                <button type="submit" class="botao botao-primario">Entrar</button>
            </form>
        </div>

        <!-- Formul√°rio Registro -->
        <div id="formRegistrar" class="formulario" aria-labelledby="btnRegistrar">
            <h2>Registrar</h2>
            <form method="post" action="/Account/Register">
                <label for="nome">üë§ Nome Completo</label>
                <input type="text" id="nome" name="Nome" placeholder="Seu nome completo" required>

                <label for="emailRegister">üìß Email</label>
                <input type="email" id="emailRegister" name="Email" placeholder="seu@email.com" required>

                <label for="senhaRegister">üîë Senha</label>
                <input type="password" id="senhaRegister" name="Senha" placeholder="Crie uma senha forte" required>

                <label for="perfil">üß© Eu sou</label>
                <select id="perfil" name="Perfil">
                    <option value="pai">Pai/Respons√°vel</option>
                    <option value="professor">Professor</option>
                    <option value="crianca">Crian√ßa</option>
                </select>

                <button type="submit" class="botao botao-secundario">Criar Conta</button>
            </form>
        </div>
    </div>
</div>

<script>
    const btnLogin = document.getElementById("btnLogin");
    const btnRegistrar = document.getElementById("btnRegistrar");
    const formLogin = document.getElementById("formLogin");
    const formRegistrar = document.getElementById("formRegistrar");

    btnLogin.addEventListener("click", () => {
        formLogin.classList.add("ativo");
        formRegistrar.classList.remove("ativo");
        btnLogin.classList.add("ativa");
        btnRegistrar.classList.remove("ativa");
    });

    btnRegistrar.addEventListener("click", () => {
        formRegistrar.classList.add("ativo");
        formLogin.classList.remove("ativo");
        btnRegistrar.classList.add("ativa");
        btnLogin.classList.remove("ativa");
    });
</script>
