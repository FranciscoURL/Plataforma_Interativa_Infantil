@{
    ViewData["Title"] = "Home - Plataforma Educacional";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
  <div class="col-md-6">
    <div class="card p-3">
      <h4>Login</h4>
      @if (TempData["Error"] != null) {
        <div class="alert alert-danger">@TempData["Error"]</div>
      }
      <form method="post" action="/Account/Login">
        <input name="Email" type="email" class="form-control mb-2" placeholder="E-mail" required />
        <input name="Senha" type="password" class="form-control mb-2" placeholder="Senha" required />
        <select name="Perfil" class="form-select mb-2">
          <option value="crianca">Criança</option>
          <option value="pai">Pai</option>
          <option value="professor">Professor</option>
        </select>
        <button class="btn btn-primary">Entrar</button>
      </form>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card p-3">
      <h4>Registrar</h4>
      @if (TempData["ErrorRegister"] != null) {
        <div class="alert alert-danger">@TempData["ErrorRegister"]</div>
      }
      @if (TempData["SuccessRegister"] != null) {
        <div class="alert alert-success">@TempData["SuccessRegister"]</div>
      }
      <form method="post" action="/Account/Register">
        <input name="Nome" type="text" class="form-control mb-2" placeholder="Nome" required />
        <input name="Email" type="email" class="form-control mb-2" placeholder="E-mail" required />
        <input name="Senha" type="password" class="form-control mb-2" placeholder="Senha" required />
        <select name="Perfil" class="form-select mb-2">
          <option value="crianca">Criança</option>
          <option value="pai">Pai</option>
          <option value="professor">Professor</option>
        </select>
        <button class="btn btn-success">Registrar</button>
      </form>
    </div>
  </div>
</div>
