@{
    ViewData["Title"] = "Bem-vindo!";
     ViewData["HideLogoutButton"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- Coluna do Login -->
                        <div class="col-md-6 p-4 border-end">
                            <h4 class="text-center mb-4">Login</h4>
                            @if (TempData["Error"] != null) {
                                <div class="alert alert-danger">@TempData["Error"]</div>
                            }
                            <form method="post" action="/Account/Login">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input name="Email" type="email" class="form-control" placeholder="seu@email.com" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Senha</label>
                                    <input name="Senha" type="password" class="form-control" placeholder="••••••" required />
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">Entrar</button>
                                </div>
                            </form>
                        </div>

                        <!-- Coluna do Registro -->
                        <div class="col-md-6 p-4 bg-light">
                            <h4 class="text-center mb-4">Registrar</h4>
                            @if (TempData["ErrorRegister"] != null) {
                                <div class="alert alert-danger">@TempData["ErrorRegister"]</div>
                            }
                            @if (TempData["SuccessRegister"] != null) {
                                <div class="alert alert-success">@TempData["SuccessRegister"]</div>
                            }
                            <form method="post" action="/Account/Register">
                                <div class="mb-3">
                                    <label class="form-label">Nome Completo</label>
                                    <input name="Nome" type="text" class="form-control" placeholder="Seu Nome" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input name="Email" type="email" class="form-control" placeholder="seu@email.com" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Senha</label>
                                    <input name="Senha" type="password" class="form-control" placeholder="Crie uma senha forte" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Eu sou</label>
                                    <select name="Perfil" class="form-select">
                                        <option value="pai">Pai/Responsável</option>
                                        <option value="professor">Professor</option>
                                        <option value="crianca">Criança</option>
                                    </select>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-success">Registrar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
