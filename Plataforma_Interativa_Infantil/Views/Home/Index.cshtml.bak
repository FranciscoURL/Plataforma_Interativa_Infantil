@{ ViewData["Title"] = "Home"; Layout = "~/Views/Shared/_Layout.cshtml"; }
<div class="row">
  <div class="col-md-8">
    <div class="card p-3">
      <h3>Sobre a Plataforma</h3>
      <p>Ambiente lúdico e interativo de apoio à educação infantil (7-12 anos). Atividades gamificadas, painel de progresso, e ferramentas para professores e responsáveis.</p>
      <ul>
        <li>Atividades por faixa etária (7-12 anos)</li>
        <li>Gamificação (conquistas, progresso)</li>
        <li>Comentários controlados por professores/especialistas</li>
      </ul>
    </div>
    <div class="card p-3 mt-3">
      <h4>Últimas Atividades</h4>
      <div id="atividadesList">Carregando...</div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card p-3">
      <h4>Login</h4>
      <form method="post" action="/Account/Login">
        <div class="mb-2"><label class="form-label">E-mail</label><input name="Email" type="email" class="form-control" required></div>
        <div class="mb-2"><label class="form-label">Senha</label><input name="Senha" type="password" class="form-control" required></div>
        <div class="mb-2"><label class="form-label">Perfil</label><select name="Perfil" class="form-select"><option value="crianca">Criança</option><option value="pai">Pai</option><option value="professor">Professor</option></select></div>
        <button class="btn btn-primary" type="submit">Entrar</button>
      </form>
    </div>
    <div class="card mt-3 p-3">
      <h5>Acessibilidade</h5>
      <div>
        <button class="btn btn-sm btn-outline-secondary mb-1" onclick="increaseFont()">A+</button>
        <button class="btn btn-sm btn-outline-secondary mb-1" onclick="decreaseFont()">A-</button>
        <div class="form-check mt-2"><input class="form-check-input" type="checkbox" id="highContrast"><label class="form-check-label" for="highContrast">Alto contraste</label></div>
      </div>
    </div>
  </div>
</div>
<script>
document.addEventListener('DOMContentLoaded', ()=>{
  document.getElementById('atividadesList').innerHTML = '<ul><li>Quebra-cabeça matemático (7-8 anos)</li><li>Leitura interativa (9-10 anos)</li><li>Desafio lógico (11-12 anos)</li></ul>';
});
</script>
