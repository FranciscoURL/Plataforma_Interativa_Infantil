@{ ViewData["Title"] = "Dashboard - Professor"; Layout = "~/Views/Shared/_Layout.cshtml"; }
<div class="row">
  <div class="col-md-6">
    <div class="card p-3">
      <h4>Lançar Atividade</h4>
      <form method="post" action="/api/atividades">
        <input name="Titulo" class="form-control mb-2" placeholder="Título"/>
        <textarea name="Descricao" class="form-control mb-2" placeholder="Descrição"></textarea>
        <select name="FaixaEtaria" class="form-select mb-2"><option>7-8</option><option>9-10</option><option>11-12</option></select>
        <button class="btn btn-success">Publicar</button>
      </form>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card p-3">
      <h4>Atividades para corrigir / comentários controlados</h4>
      <div>
        <p><strong>Quebra-cabeça — João — 40%</strong></p>
        <textarea class="form-control" placeholder="Comentário (visível com moderação)"></textarea>
        <button class="btn btn-primary mt-2">Enviar comentário</button>
      </div>
    </div>
  </div>
</div>
