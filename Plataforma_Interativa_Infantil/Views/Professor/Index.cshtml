@model List<backend.ViewModels.CriancaProgressoViewModel>
@{
    ViewData["Title"] = "Dashboard do Professor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="modal fade" id="confirmLogoutModal" tabindex="-1" aria-labelledby="confirmLogoutModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmLogoutModalLabel">Tem certeza que quer sair?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Você será desconectado da PlataformaEdu. Confirma a saída?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ficar na Plataforma</button>
        <a href="@Url.Action("Logout", "Account")" class="btn btn-danger">Sim, Quero Sair</a>
      </div>
    </div>
  </div>
</div>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Progresso dos Alunos</h1>
        <div>
            <a asp-action="CriarAtividade" class="btn btn-primary">Criar Nova Atividade</a>
           [

        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (Model != null && Model.Any())
    {
        foreach (var aluno in Model)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h3 class="mb-0 h5">@aluno.Nome</h3>
                    <span class="badge bg-warning text-dark">⭐ @aluno.Estrelas Estrelas</span>
                </div>
                <div class="card-body">
                    <h6 class="card-title">Atividades Concluídas</h6>
                    @if (aluno.Respostas.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var resposta in aluno.Respostas.OrderByDescending(r => r.DataRealizacao))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <div>
                                        <strong>@resposta.Atividade.Titulo</strong> 
                                        <span class="badge bg-info fw-normal">@resposta.Atividade.Categoria</span>
                                    </div>
                                    <span class="badge bg-success rounded-pill p-2">@resposta.Desempenho% de acerto</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Nenhuma atividade concluída ainda.</p>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">Nenhum aluno encontrado.</div>
    }
</div>
