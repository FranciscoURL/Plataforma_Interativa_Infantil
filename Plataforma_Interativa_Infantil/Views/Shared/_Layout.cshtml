 @{ 
    var title = ViewData["Title"] ?? "PlataformaEdu";
}
<!doctype html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@title</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link href="/css/site.css" rel="stylesheet" />
</head>
<body class="light">
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <i class="bi bi-mortarboard-fill fs-2 me-2"></i> 
                <span class="fw-bold">PlataformaEdu</span>
            </a>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                <ul class="navbar-nav align-items-center">
                    @if (User.Identity != null && User.Identity.IsAuthenticated && ViewData["HideLogoutButton"] == null)
                    {
                        }
                </ul>
            </div>
        </div>
    </nav>
  </header>

  <div class="container mt-4">
      <main role="main" class="pb-3">
          @RenderBody()
      </main>
  </div>
  
  <footer class="footer border-top text-muted">
      <div class="container text-center py-3">
            &copy; 2025 - PlataformaEdu
      </div>
  </footer>

  <button class="btn btn-primary rounded-circle shadow-lg btn-acessibilidade-lateral" type="button" data-bs-toggle="modal" data-bs-target="#acessibilidadeModal">
      <i class="bi bi-universal-access fs-4"></i>
  </button>

  <div class="modal fade" id="acessibilidadeModal" tabindex="-1" aria-labelledby="acessibilidadeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="acessibilidadeModalLabel">Opções de Acessibilidade</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <h6><i class="bi bi-fonts"></i> Tamanho da Fonte</h6>
          <button id="increaseFont" class="btn btn-secondary w-100 mb-2">Aumentar Fonte (A+)</button>
          <button id="decreaseFont" class="btn btn-secondary w-100">Diminuir Fonte (A-)</button>
          <hr>
          <h6><i class="bi bi-palette-fill"></i> Contraste</h6>
          <button id="toggleContrast" class="btn btn-secondary w-100">Alternar Alto Contraste</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>

  @RenderSection("Scripts", required: false)
</body>
</html>